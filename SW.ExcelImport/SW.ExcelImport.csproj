<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>8.0</LangVersion>
     <PackageId>SimplyWorks.ExcelImport</PackageId>
    <Authors>Simplify9</Authors>
    <Product>SimplyWorks.ExcelImport</Product>
    <Description>A .NET library for reading, parsing, and validating Excel files with type-safe operations, data annotation validation, and Entity Framework integration. Supports batch processing with comprehensive error handling. See GitHub for full documentation and examples.</Description>
    <PackageTags>excel;import;validation;parsing;entity-framework;batch-processing;data-annotations</PackageTags>
    <PackageProjectUrl>https://github.com/simplify9/SW-ExcelImport</PackageProjectUrl>
    <RepositoryUrl>https://github.com/simplify9/SW-ExcelImport</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Copyright>Simplify9</Copyright>
    <Company>Simplify9</Company>
    <PackageIcon>icon.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>    
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="SimplyWorks.EfCoreExtensions" Version="2.0.0" />
    <PackageReference Include="SimplyWorks.ExportToExcel" Version="2.0.0" />
    <PackageReference Include="SimplyWorks.HttpExtensions" Version="2.0.1" />
    <PackageReference Include="SimplyWorks.PrimitiveTypes" Version="2.0.4" />
    <PackageReference Include="ExcelDataReader" Version="3.7.0" />
    
  </ItemGroup>

  <ItemGroup>
    <None Include="../icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="../README.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>
